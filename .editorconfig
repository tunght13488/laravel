; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{php,js,json,less}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{package.json,bower.json}]
indent_size = 2
